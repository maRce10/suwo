meta <- utils::packageDescription("suwo")

year <- if (!is.null(meta$Date)) sub("-.*", "", meta$Date) else format(Sys.Date(), "%Y")

bibentry(
  bibtype = "Manual",
  title   = paste(meta$Package, meta$Title, sep = ": "),
  author  = meta$Author,
  year    = year,
  note    = paste("R package version", meta$Version),
  url     = meta$URL
)
